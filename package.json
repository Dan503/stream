{
  "name": "@rollup/stream",
  "version": "3.0.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "Stream Rollup build results",
  "license": "MIT",
  "repository": "rollup/stream",
  "author": "Andrew Powell <andrew@shellscape.org>",
  "homepage": "https://github.com/rollup/stream#readme",
  "bugs": "https://github.com/rollup/stream/issues",
  "main": "dist/index.js",
  "engines": {
    "node": ">= 8.0.0"
  },
  "scripts": {
    "build": "rollup -c",
    "ci:coverage": "nyc npm run test && nyc report --reporter=text-lcov > coverage.lcov",
    "ci:lint": "npm run build && npm run lint",
    "ci:test": "npm run test -- --verbose",
    "lint": "npm run lint:js && npm run lint:docs && npm run lint:package",
    "lint:docs": "prettier --single-quote --write README.md",
    "lint:js": "eslint --fix --cache src --ext .js,.ts",
    "lint:package": "prettier --write package.json --plugin=prettier-plugin-package",
    "prebuild": "del-cli dist",
    "prepublishOnly": "npm run lint && npm run build",
    "pretest": "npm run build -- --sourcemap",
    "security": "npm audit",
    "test": "ava"
  },
  "files": [
    "dist",
    "types",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "rollup",
    "plugin",
    "utils"
  ],
  "peerDependencies": {
    "rollup": "^1.20.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.0",
    "@rollup/plugin-node-resolve": "^6.0.0",
    "@rollup/plugin-typescript": "^2.0.1",
    "@types/node": "^12.12.11",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "ava": "^2.4.0",
    "del-cli": "^3.0.0",
    "eslint-config-rollup": "^0.1.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.4.3",
    "nyc": "^14.1.1",
    "prettier": "^1.19.1",
    "prettier-plugin-package": "^0.3.1",
    "rollup": "^1.27.2",
    "ts-node": "^8.5.2",
    "tsconfig-paths": "^3.9.0",
    "tslib": "^1.10.0",
    "typescript": "^3.7.2"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "files": [
      "!**/fixtures/**",
      "!**/helpers/**",
      "!**/recipes/**",
      "!**/types.ts"
    ]
  },
  "module": "dist/index.es.js",
  "nyc": {
    "extension": [
      ".js",
      ".ts"
    ]
  },
  "types": "types/index.d.ts"
}
